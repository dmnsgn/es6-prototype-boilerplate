{
  "name": "es6-prototype-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for prototype using es6",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://dmnsgn@bitbucket.org/dmnsgn/es6-prototype-boilerplate.git"
  },
  "keywords": [
    "es6",
    "prototype",
    "boilerplate"
  ],
  "author": "Damien Seguin <https://twitter.com/dmnsgn>",
  "license": "ISC",
  "devDependencies": {
    "babelify": "^6.1.x",
    "browserify": "^10.2.x",
    "http-server": "^0.8.x",
    "live-reload": "^1.1.x",
    "minifyify": "^7.0.x",
    "nodemon": "^1.3.x",
    "opener": "^1.4.x",
    "parallelshell": "^1.1.x",
    "rimraf": "^2.3.x",
    "stylus": "^0.51.x"
  },
  "scripts": {
    "dev": "npm run open -s & parallelshell \"npm run live-reload -s\" \"npm run serve -s\" \"npm run watch:dev -s\"",
    "build": "npm run build:scripts -s && npm run build:styles -s && npm run build:markup -s",

    "serve": "http-server -p 9090 dist/",
    "open": "opener http://localhost:9090",
    "live-reload": "live-reload --port 9091 dist/",

    "watch": "npm run dev:scripts -s && npm run dev:styles -s && npm run dev:markup -s",
    "watch:dev": "nodemon -q -w src/ --ext '.' --exec 'npm run watch'",

    "dev:markup": "jade src/markup/index.jade -o dist",
    "dev:styles": "stylus src/styles/main.styl -m -o dist/",
    "dev:scripts": "browserify -d src/scripts/main.js -t [babelify] -p [minifyify --compressPath . --map main.js.map --output dist/main.js.map] -o dist/main.js",

    "build:markup": "jade src/markup/index.jade -o dist",
    "build:styles": "stylus src/styles/main.styl -o dist/",
    "build:scripts": "browserify src/scripts/main.js -t [babelify] -o dist/main.js",

    "clean": "rimraf dist/*"

  }
}
