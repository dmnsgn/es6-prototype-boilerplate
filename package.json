{
  "name": "prtt",
  "version": "2.0.0",
  "description": "A WebGL prototype starter using Budo, browserify, babelify, glslify, dat.GUI",
  "main": "src/index.js",
  "homepage": "https://github.com/dmnsgn/prtt",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmnsgn/prtt.git"
  },
  "issues": {
    "url": "https://github.com/dmnsgn/prtt/issues"
  },
  "keywords": [
    "es6",
    "prototype",
    "boilerplate"
  ],
  "author": "Damien Seguin <https://twitter.com/dmnsgn>",
  "license": "MIT",
  "devDependencies": {
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "brfs": "^1.4.3",
    "browserify": "^13.0.1",
    "budo": "^8.2.2",
    "eslint": "^3.0.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.2",
    "eslint-plugin-react": "^5.1.1",
    "glslify": "^5.0.2",
    "uglify-js": "^2.6.2"
  },
  "dependencies": {
    "controlkit": "^0.1.9",
    "get-canvas-context": "^1.0.2",
    "gl-checker-background": "^1.0.0",
    "gl-clear": "^2.0.0",
    "gl-shader": "^4.2.0",
    "raf-loop": "^1.1.3"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "comma-dangle": 0
    }
  },
  "vendor": [
    "./src/vendor/optimizedResize.js"
  ],
  "scripts": {
    "dev": "npm run vendor && budo src/index.js:static/bundle.js --live --open -- -t babelify -t glslify -t brfs",
    "vendor": "node bin/vendor.js",
    "build": "browserify src/index.js -t babelify -t glslify -t brfs | uglifyjs -mc > static/bundle.js && npm run vendor && uglifyjs static/vendor.js -mc -o static/vendor.js"
  }
}
