{
  "name": "es6-prototype-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for prototype using es6",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://dmnsgn@bitbucket.org/dmnsgn/es6-prototype-boilerplate.git"
  },
  "keywords": [
    "es6",
    "prototype",
    "boilerplate"
  ],
  "author": "Damien Seguin <https://twitter.com/dmnsgn>",
  "license": "ISC",
  "devDependencies": {
    "babelify": "^6.1.x",
    "browser-sync": "^2.7.5",
    "browserify": "^10.2.x",
    "minifyify": "^7.0.x",
    "nodemon": "^1.3.x",
    "parallelshell": "^1.1.x",
    "rimraf": "^2.3.x",
    "stylus": "^0.51.x"
  },
  "scripts": {
    "dev": "npm run open -s & parallelshell \"npm run browser-sync -s\" \"npm run watch -s\"",
    "build": "npm run build:scripts -s && npm run build:styles -s",
    "browser-sync": "browser-sync start --server \"dist\" --files \"dist/*.css, dist/*.html, dist/*.js\"",
    "watch": "nodemon -q -w src/ --ext '.' --exec 'npm run watch:dev'",
    "watch:dev": "npm run dev:scripts -s && npm run dev:styles -s",
    "dev:scripts": "browserify -d src/scripts/main.js -t [babelify] -p [minifyify --compressPath . --map main.js.map --output dist/main.js.map] -o dist/main.js",
    "dev:styles": "stylus src/styles/main.styl -m -o dist/",
    "build:scripts": "browserify src/scripts/main.js -t [babelify] -o dist/main.js",
    "build:styles": "stylus src/styles/main.styl -o dist/",
    "clean": "rimraf dist/*"
  }
}
